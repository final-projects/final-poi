{
  "version": "XLSX",
  "styles": [
    {
      "title": "标题",
      "locked": true,
      "horizontalAlignment": "CENTER",
      "verticalAlignment": "CENTER",
      "foregroundColor": "RED",
      "font": {
        "name": "楷体",
        "size": 24,
        "color": "#00FF00"
      }
    }
  ],
  "sheets": [
    {
      "name": "SHEET NAME",
      "defaultRowHeight": 30,
      "defaultColumnWidth": -1,
      "headers": [
        {
          "cells": [
            {
              "style": "标题",
              "value": "姓名"
            },
            {
              "style": "标题",
              "value": "生日"
            },
            {
              "style": "标题",
              "value": "年龄"
            },
            {
              "style": "标题",
              "value": "生日/2"
            }
          ]
        }
      ],
      "body": {
        "cells": [
          {
            "columnWidth": 30,
            "value": "#{name}"
          },
          {
            "value": "#{age}"
          },
          {
            "columnWidth": 30,
            "value": "#{new java.text.SimpleDateFormat('yyyy-MM-dd hh:mm:ss').format(birthday)}"
          },
          {
            "value": "=B#{#cell.rowIndex + 1}/2"
          }
        ]
      },
      "footers": [
        {
          "cells": [
            {
              "value": "平均年龄："
            },
            {
              "value": "=AVERAGE(B2:B#{#cell.rowIndex})"
            }
          ]
        }
      ]
    }
  ]
}